<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/touch_effect"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/repo_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repo_name"
        android:textSize="20sp"
        android:layout_margin="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/repo_main_language"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/repo_main_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repo_main_language"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"

        app:layout_constraintTop_toBottomOf="@id/repo_name_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>